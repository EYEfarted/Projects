#:import main main

#:import ListAdapter kivy.adapters.listadapter.ListAdapter
<MyScreenManager>:
    id: screen_manager
    screen_one: LoginScreen
    screen_two: SelectScreen
    screen_three: SearchScreen
    screen_four: ResultsScreen
    screen_five: BarcodeScreen
    screen_six: BarcodeScreen


    LoginScreen:
        id: LoginScreen
        manager: screen_manager
        name: 'login'

    SelectScreen:
        id: SelectScreen
        manager: screen_manager
        name: 'select'

    SearchScreen:
        id: SearchScreen
        manager: screen_manager
        name: 'search'

    ResultsScreen:
        id: ResultsScreen
        manager: screen_manager
        name: 'results'

    BarcodeScreen:
        id: BarcodeScreen
        manager: screen_manager
        name: 'barcode'

    UploadScreen:
        id: UploadScreen
        manager: screen_manager
        name: 'upload'



<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: .3
            text: 'Welcome to the L.I.S.T.'
            font_size: 30
        Image:
            size_hint_y: .7
            source: 'logo.png'
            allow_stretch: True
            keep_ratio: True
        BoxLayout:
            orientation: 'vertical'
            GridLayout:
                size_hint_y: 3.5
                cols: 2
                padding: 5,5,5,5
                spacing: 5,5
                Label:
                    text: 'Username'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    size_hint: .5, 1
                TextInput:
                    id: uname
                    text_hint: 'Username'
                    multiline: False
                    size_hint: 3, 1
                Label:
                    text: 'Password'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    size: self.width, self.height
                TextInput:
                    id: pword
                    multiline: False
                    password: True
            Button:
                text: 'Login'
                size: self.parent.width, 20
                font_size: 30
                on_release: root.creds()

<SelectScreen>:
    GridLayout:
        cols: 2
        padding: 25, 25, 25, 25
        spacing: 25, 25
        Button:
            text: 'Search'
            font_size: 20
            on_release: app.root.current  = 'search'
        Button:
            text: 'Upload'
            font_size: 20
            on_release: app.root.current  = 'upload'
        Button:
            text: 'Scan'
            font_size: 20
            on_release: print("test") # app.root.current  = 'scan'
        Button:
            text: 'Reports'
            font_size: 20
            on_release: print("test") # app.root.current  = 'reports'
        Button:
            text: 'QRCode Label Generator'
            font_size: 20
            on_press: app.root.current  = 'barcode'
            on_release: print("Now we need to generate a qr code label for the item") # app.root.current  = 'reports'
        Button:
            text: 'Quit'
            font_size: 20
            on_release: app.get_running_app().stop()

<UploadScreen>:
    upload_file: upload_file
    BoxLayout:
        orientation: 'vertical'
    # on_enter: self.create_table('intoinventory.csv')
        TextInput:
            id: upload_file
            text: 'intoinventory.csv'
        BoxLayout:

            Button:
                text: 'Go Back'
                on_press: self.parent.parent.parent.go_back()
                color: 1,1,1,1
                background_color: 1,0,0,1
            Button:
                text: 'Accept'
                on_press: self.parent.parent.parent.create_table()
            Button:
                text: 'Deny'




<SearchScreen>:
    on_enter: self.search_word()

<ResultsScreen>:
    on_enter: self.show_results()

<BarcodeScreen>:
    on_enter: self.generate_barcode()
    Label:
        text: "Not Yet"
        font_size: 50




<MyBackButton>:
    text: 'Go Back'
    on_press: app.root.current = 'search'


<MyRefreshButton>:
    text: 'Refresh Page'
    on_press: app.root.what_am_i()
    on_release: self.parent.parent.parent.show_results()

SearchForm:
<SearchForm>:
    orientation: 'vertical'
    search_input: search_box
    search_results: search_results_list
    TextInput:
        id: search_box
        height: '150dp'
        size_hint_y: None
        focus: True
        multiline: False
        font_size: 30
        on_text_validate: root.search_location(self.text)
    BoxLayout:
        orientation: 'horizontal'
        height: '70dp'
        size_hint_y: None
        Button:
            text: 'Search'
            font_size: 17
            size_hint_x: 50
            on_press: self.parent.parent.search_location(self.parent.parent.ids['search_box'].text)
        Button:
            text: 'Menu'
            font_size: 17
            size_hint_x: 50
            on_press: app.root.current = 'select'

    ListView:
        id: search_results_list
        adapter:
            ListAdapter(data=[], cls=main.LocationButton)

<LocationButton>:
    size_hint_x: 100
    on_press: self.what_am_i()
    on_release: app.root.current = 'results'
    is_selected: False

<Details>:
    orientation: 'vertical'
    Label:
        text: 'Part Number:'
        halign: 'left'
        padding_x: 6
        text_size: self.width, None
        size: self.texture_size
    Label:
        text: 'Condition:'
        halign: 'left'
        padding_x: 6
        text_size: self.width, None
        size: self.texture_size
        color: 1,0,0,1
    Label:
        text: 'Category:'
        padding_x: 6
        halign: 'left'
        text_size: root.width, None
        size: self.texture_size
    Label:
        text: 'Description:'
        padding_x: 6
        halign: 'left'
        text_size: root.width, None
        size: self.texture_size
    Label:
        text: 'In Stock:'
        padding_x: 6
        halign: 'left'
        text_size: root.width, None
        size: self.texture_size
    Label:
        text: 'Cost:         '+'$'
        padding_x: 6
        halign: 'left'
        text_size: root.width, None
        size: self.texture_size
    Label:
        text: 'Total:         '+'$'
        padding_x: 6
        halign: 'left'
        text_size: root.width, None
        size: self.texture_size

<TotalLabel>:
    text: str(round(float(app.root.info.price)*float(app.root.info.stock), 2))
    halign: 'left'
    text_size: root.width, None
    size: self.texture_size

<CategoryLabel>:
